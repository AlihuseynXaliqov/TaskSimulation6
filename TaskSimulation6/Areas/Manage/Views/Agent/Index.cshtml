@model List<Agent>
@{
	int count = 1;
}
<div class="container">
	<a class="btn btn-primary" asp-action="Create" role="button">Create</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Position Name</th>
				<th scope="col">Image</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<th scope="row">@count</th>
					<td>@item.Name</td>
					<td>@item.Position.Name</td>
					<td>
						<img width="100" height="100" src="~/Upload/Agent/@item.ImageUrl" />
					</td>
					<td>
						<a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id" role="button">Update</a>
						<a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id" role="button">Delete</a>
					</td>
				</tr>

				count++;
			}


		</tbody>
	</table>
</div>